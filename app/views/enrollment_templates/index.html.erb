<h1>
  All enrollments
</h1>

<a href="/enrollments/new">
  Add a new enrollment
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Course
    </th>

    <th>
      Student
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @enrollments.each do |enrollment| %>
  <tr>
    <td>
      <%= enrollment.id %>
    </td>

    <td>
      <a href = "courses/<%= enrollment.course_id %>"><%= Course.find(enrollment.course_id).title%></a>
    </td>

    <td>
      <a href = "courses/<%= enrollment.student_id %>"><%= Student.find(enrollment.student_id).first_name%> <%= Student.find(enrollment.student_id).last_name%></a>
    </td>

    <td>
      <%= time_ago_in_words(enrollment.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(enrollment.updated_at) %> ago
    </td>

    <td>
      <a href="/enrollments/<%= enrollment.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
